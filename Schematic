POST /upload/modules
input: module_*.md files
output: Module[]

POST /upload/questions
input: Module[]
output: Question[]

type Module = {
reference: string; // COMPxxxx typically, this needs to be unique among the input set, since it's going to be used as id
title: string; // algorithmics
description: string; // the study of algorithms
}

// abstract base type for questions
type BaseQuestion = {
id: // could be string GUID | number honestly, just need it for reference
moduleReference: string // used to map this question to the module it's for
questionText: string; // user facing question prompt
weighting?: number // defaults to 1, but can be decreased (e.g 0.5 for lower importance questions) or increased (e.g: 2.75 for higher importance questions)
}

// questions with boolean answers
type BooleanQuestion = BaseQuestion & {
noLabel?: string // label for the no option, defaults to "No"
yesLabel?: string // label for the yes option, defaults to "Yes" 
}

// questions with scalar/numeric answers
type ScalarQuestion = BaseQuestion & {
minValue: number 
mavValue: number
increment: number
minLabel?: string // defaults to minValue when undefined
minValue?: string // defaults to maxValue when undefined
}

const isBooleanQuestion // type validator, could use zod

const isScalarQuestion // type validator, could use zod
